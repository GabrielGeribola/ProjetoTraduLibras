<%- include('includes/head'); %>

<body>
  <div class="container">

    <div class="header">
      <header>Tradulibras</header>
    </div>

    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3">
        <div class="row">
          <h2 class="text-center">Criar conta</h2>
          <p class="text-center lead">Preencha o formulário abaixo para criar sua conta.</p>

          <%- include('includes/messages'); %>

          <div class="">
            <h4>Cadastro</h4>

            <form action="/login/register" method="post">
              <div class="form-group">
                <label class="diminutivo">Digite seu e-mail</label>
                <br>
                <input type="email" class="form-control" name="email" placeholder="Email" required>
              </div>

              <div class="form-group">
                <label class="diminutivo">Digite sua senha</label>
                <br>
                <input type="password" class="form-control" name="password" placeholder="Senha" required>
              </div>

              <button type="submit" class="btn-btn-primary">Criar minha conta</button>
            </form>

            <p class="tem-conta">Já tem uma conta? <a class="linkp-login" href="/login/index">Faça login</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('includes/footer'); %>
