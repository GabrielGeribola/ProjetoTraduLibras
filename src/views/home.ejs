</head>

<body>
  <main>
<div class="home">
    <h2 class="translate">TRADUTOR</h2>

    <div>
        <div>
            <button class="button-2"> <img alt="tab"><i class="fa-solid fa-gear"></i></button>
        </div>

        <div>

        </div>
          <i id="menu" class="material-icons">lista</i>
        </div>

        <div class="imagem">
          <% if (translatedText) { %>
            <p><%= translatedText %></p>
          <% } else { %>
            <img src="/images/person-icon.png" alt="Pessoa">
          <% } %>
        </div>

        <form action="/translate" method="POST">
          <input class="input-1" placeholder="Digite seu texto" name="text" id="texto" required>
          <input type="hidden" name="sourceLanguage" value="pt">
          <input type="hidden" name="targetLanguage" value="en">
          <button type="submit" class="button-mic">
            <i id="mic" class="material-icons">mic</i>
          </button>
          <button type="button" class="button-copy">
            <i id="copy" class="material-icons">content_copy</i>
          </button>
        </form>
