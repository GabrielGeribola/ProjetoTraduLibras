  display: flex; /* FAZ FICAR UM DO LADO DO OUTRO */
  align-items: center; /* centraliza verticalmente */
  padding: 0;
  text-decoration: none;
  font-size: 20px;
  color: #3B3F46;
  background-color: transparent;
  transition: 0.3s;

  margin: 50px 0px 50px 0px;
}


.nav-img {
