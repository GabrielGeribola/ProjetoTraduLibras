<%- include('includes/head'); %>

<style>
  .container-cursos {
    max-width: 1000px;
    margin: 0 auto;
    padding: 10px 20px;
    font-family: 'Poppins', sans-serif;
  }

  .title-cursos {
    text-align: center;
    font-size: 32px;
    margin-top: 10px; /* Título mais para cima */
    margin-bottom: 30px; /* Espaço depois do título */
  }

  .subtitulo {
    font-size: 22px;
    margin-bottom: 20px;
    color: #333;
  }

  .cursos-pdf,
  .cursos-video {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-between;
    margin-bottom: 40px;
  }

  .curso-primeiro-pdf,
  .curso-segundo-pdf,
  .curso-primeiro-video,
  .curso-segundo-video,
  .curso-terceiro-video {
    flex: 1 1 calc(33.33% - 20px);
    box-sizing: border-box;
    min-width: 250px;
    max-width: 300px;
  }

  .video-thumbnail {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  h4 {
    font-size: 18px;
    margin: 10px 0 5px;
  }

  a {
    display: inline-block;
    background-color: #004369;
    color: white;
    padding: 10px 20px;
    border-radius: 6px;
    text-decoration: none;
    margin-top: 10px;
  }

  a:hover {
    background-color: #a3c8ff;
  }

  p {
    margin-top: 5px;
  }
</style>

<body>
  <main>
    <%- include('includes/navbar'); %>

    <div class="container-cursos">
      <h2 class="title-cursos">CURSOS</h2>

      <!-- Bloco PDF -->
      <h3 class="subtitulo">Vamos começar a aprender:</h3>
      <div class="cursos-pdf">
        <div class="curso-primeiro-pdf">
          <h4>Libras</h4>
          <p>PDF</p>
          <a href="/pdfs/libras-curso.pdf" download="Libras_Curso">Faça o download</a>
        </div>

        <div class="curso-segundo-pdf">
          <h4>Libras</h4>
          <p>PDF</p>
          <a href="/pdfs/sinais-em-libras.pdf" download="Sinais_em_Libras">Faça o download</a>
        </div>
      </div>

      <!-- Bloco Vídeos -->
      <h3 class="subtitulo">Recomendamos para você:</h3>
      <div class="cursos-video">
        <div class="curso-primeiro-video">
          <h4>Conceitos básicos em Libras</h4>
          <a href="https://www.youtube.com/watch?v=VIDEO_ID_1" target="_blank">
            <img src="https://img.youtube.com/vi/VIDEO_ID_1/hqdefault.jpg" alt="Conceitos básicos em Libras" class="video-thumbnail">
            <p>Saiba mais</p>
          </a>
        </div>

        <div class="curso-segundo-video">
          <h4>75 Sinais em Libras</h4>
          <a href="https://www.youtube.com/watch?v=VIDEO_ID_2" target="_blank">
            <img src="https://img.youtube.com/vi/VIDEO_ID_2/hqdefault.jpg" alt="75 Sinais em Libras" class="video-thumbnail">
            <p>Saiba mais</p>
          </a>
        </div>

        <div class="curso-terceiro-video">
          <h4>Nível básico em Libras</h4>
          <a href="https://www.youtube.com/watch?v=VIDEO_ID_3" target="_blank">
            <img src="https://img.youtube.com/vi/VIDEO_ID_3/hqdefault.jpg" alt="Nível básico em Libras" class="video-thumbnail">
            <p>Saiba mais</p>
          </a>
        </div>
      </div>
    </div>

    <%- include('includes/footer'); %>
  </main>
</body>
